<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="horizontal"
        android:background="#00252424"
>

    <TextView
            android:layout_width="510dp"
            android:layout_height="wrap_content"
            android:text="You wake still numb by the screams of last night. You made it safe, but you know that now they are coming for you. Now you have to find a way to leave, now you have to find a way to..."
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:textSize="24sp" android:layout_marginTop="138dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/btn_start"/>
    <Button
            android:text="Escape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.499" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:background="#00292525"/>

</android.support.constraint.ConstraintLayout>